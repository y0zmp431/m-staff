<!DOCTYPE html>
<html>
<head>
  <title>Base</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="login_bar">
		<% if current_user %>
			<%= current_user.name %> |
			<%= link_to t(:logout), logout_path %>
		<% else %>
			<%= link_to t(:login), login_path %>
		<% end %>
	</div>

<%= yield %>

</body>
</html>
