<p id="notice"><%= notice %></p>

<p>
  <b>Login:</b>
  <%= @user.login %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Active:</b>
  <%= @user.active %>
</p>

<p>
<b>Roles:</b><ul>
  <% @user.roles.each do |role| %>
		<li><%= role %>
	<% end %></ul>
</p>

<p>
  <b>Login count:</b>
  <%= @user.login_count %>
</p>
<p>
  <b>Failed login count:</b>
  <%= @user.failed_login_count %>
</p>
<p>
  <b>Last request at:</b>
  <%= @user.last_request_at %>
</p>
<p>
  <b>Current login at:</b>
  <%= @user.current_login_at %>
</p>
<p>
  <b>Last login at:</b>
  <%= @user.last_login_at %>
</p>
<p>
  <b>Current login ip:</b>
  <%= @user.current_login_ip %>
</p>
<p>
  <b>Last login ip:</b>
  <%= @user.last_login_ip %>
</p>

<%= link_to_if( @user.active, 'Disable', user_path(@user, 'user[active]' => false), {:method => :put}) do
			link_to 'Enable', user_path(@user, 'user[active]' => true), :method => :put
end
 %> |
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
