<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
	<%=  f.label t(:password), f.object.new_record? ? nil : t("Change password") %><br />
	<%=  f.password_field :password %><br />
	<br />
	<%=  f.label t(:password_confirmation) %><br />
	<%=  f.password_field :password_confirmation %><br />
  <div class="field">
    <%= f.label t(:Name)  %><br />
    <%= f.text_field :name %>
  </div>
<% if can? :manage, User %>
  <div class="field">
			<%= f.check_box :disabled %>
			<%= f.label :disabled %><br />
  </div>
	<p>
	<%=  f.label t(:roles) %><br />
	<%  for role in User.valid_roles %>
		<label>
		<%=  check_box_tag "user[roles][]", role, @user.roles.include?(role) %>
		<%= h role.to_s.humanize %></label><br />
	<%  end %>
	<%=  hidden_field_tag "user[roles][]", "" %>
	</p>
<% end %>
  <div class="actions">
		<% if request.fullpath == "/signup" %>
			<%= f.submit t("Signup") %>
		<% else %>
			<%= f.submit t('Save')%>
		<% end %>
  </div>
<% end %>
