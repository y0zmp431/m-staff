%p#notice= notice

:sass
  .litter
    text-align: center
    h1
      font-size: 320%
      font-weight: 100
      font-family: BleedingCowboys
      text-transform: capitalize
  .pet_wrap
    padding: 10px
  .pet
    background: #fff
    color: #000
    padding: 20px
    width: 100%
  .el
    width: 30%
    display: inline-block
    padding: 0 7%
    text-align: center
    .photos
      width: 100%
      text-align: center
    img
    .actions
      opacity: 0
  .el:hover
    .actions
      opacity: 1

  .photos
    .el:first-child:last-child
      width: 50%
  .pet img:first-child

  .litter
    .litter_pets
      padding-top: 20px
  .aka
    background:  linear-gradient( 90deg, rgba(255, 255, 255, 1) , rgba(255, 255, 255, 0), rgba(255, 255, 255, 1)), linear-gradient( 0deg, rgba(0, 0, 0, 0.0) 45%, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0) 55%)

    small
      background: #fff
      padding: 0 10px
      font-style: italic
  .owner
    position: relative
    margin-top: -150px
    padding: 20px
    width: 200px
    border: 2px solid #000
    transform: rotate(-5deg)
    opacity: 0.5
    h3
      margin: 0
      padding: 0

.litter 
  %h1
    = link_to @litter do
      Litter 
      %big= @litter.litter_sym
  %h2
    = l @litter.date_of_birth
  %h3
    = @litter.pets_count_for_sale
  .litter_pets
    - @litter.dogs.each do |dog|
      .pet_wrap.unit
        .pet.s_unit
          .name 
            %h2
              = dog.fullname
            .aka
              %small
                aka
            %h1
              = dog.name
          .photos
            - dog.pets_photos[0, 2].each do |photo|
              .el
                = image_tag photo.image :h300
                - if can? :manage, Dog
                  .actions
                    = photo.image_file_name
                    |
                    = link_to t('Edit'), edit_photo_path(photo)
                    |
                    = link_to t('Destroy'), photo, method: :delete, data: { confirm: 'Are you sure?' }
          - unless dog.owner_desc.blank?
            .owner.centered
              - dog.owner_desc.split("\n").each_with_index do |o, i|
                - if i == 0
                  %h3.slabtext
                    = o
                - elsif i == 2
                  .slabtext
                    = o
                - else
                  = o
      .clear


= link_to 'Edit', edit_litter_path(@litter)
\|
= link_to 'Back', litters_path
