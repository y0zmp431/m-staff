= form_for @contact, :url => contacts_path do |f|
  - if @contact.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contact.errors.count, "error")} prohibited this contact from being saved:"
      %ul
        - @contact.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :main_phone
    %br/
    = f.text_field :main_phone
  .field
    = f.label :phones
    %br/
    = f.text_field :phones
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :skype
    %br/
    = f.text_field :skype
  .field
    = f.label :gtalk
    %br/
    = f.text_field :gtalk
  .field
    = f.label :adress
    %br/
    = f.text_area :adress
  .field
    = f.label :desc
    %br/
    = f.text_area :desc
  .actions
    = f.submit t('Save')
