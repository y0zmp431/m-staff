<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
			<!--
			<h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
			-->
			<h2><%=  t "Article not save" %>
			<% if @article.errors.count > 1 %>
				<%= t :because_next_errors %>
			<% else %>
				<%= t :because_next_error %>
			<% end %>
			</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<% if false %>
		<div class="field">
			<%= f.label :user_id %><br />
			<%= f.number_field :user_id %>
		</div>
	<% end %>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :section %><br />
    <%= f.text_field :section %>
  </div>
  <div class="field">
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.label :short_text %><br />
    <%= f.text_area :short_text %>
  </div>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, :class => "tinymce" %>
<%= tinymce %>
  </div>
  <div class="field">
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </div>
  <div class="actions">
    <%= f.submit t('Save') %>
  </div>
<% end %>
