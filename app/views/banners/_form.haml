= form_for(@banner) do |f|
  - if @banner.errors.any?
    #error_explanation
      %h2
        = t "Banner not save"
        - if @banner.errors.count > 1
          = t :because_next_errors
        - else
          = t :because_next_error
      %ul
        - @banner.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :banner_type
    %br/
    = f.text_field :banner_type
  .field
    = f.label :target_url
    %br/
    = f.text_field :target_url
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .field
    = f.label :disabled
    %br/
    = f.check_box :disabled
  .actions
    = f.submit t('Save')
