@font-face {
	font-family: HennyPenny;
	src: local("HennyPenny"),
	url(/HennyPenny-Regular.ttf);
}
@font-face {
	font-family: DollhouseC;
	src: local("DollhouseC"),
	url(/pNGnrklh.ttf);
}
@font-face {
	font-family: Gregor;
	src: local("Gregor"),
  url(<%= asset_path 'gregor_reg.otf' %>);
}
$max_width: 1280px;
$logo_color:#d58; 
$logo_hover_color:#f08; 
$menu_color:#777; 
$menu_hover_color:#f08; 
html, body{
  width:100%;
  border-collapse:collapse;
	font-family: Gregor;
}
*{
  margin:0;
  padding:0;
}
.clear{
  clear:both;
}
.container{
  max-width:$max_width;
  margin:0 auto;
}

hgroup.logo{
    color:$logo_color;
    text-align:center;
}
hgroup:hover{
  color:$logo_hover_color;
}
.logo{
    text-align:center;
    line-height:100%;
    margin:0;
  h1{
    font-family: 'HennyPenny', sans-serif;
    font-size:25px; 
    padding:23px 0 0 0;
  }
  h2{
    font-family: 'DollhouseC', sans-serif;
    font-size: 12px;
    padding:0 0 7px 0;
  }
}
header{
  border-bottom:1px solid #aaa;
}
nav.main{
  display:block;
  text-align:center;
}
nav.main a{
  display:inline-block;
  //padding:16px 10px 15px 10px;
  padding:0 10px;
	font-family: 'DollhouseC', sans-serif;
	font-size: 20px;
  font-weight:bold;
  color:$menu_color;
}
nav.main a:hover{
  background:#f09;
  color:#fff;
}

.main_banner{
  background:url("<%= asset_path "winter_race.jpg" %>") center bottom no-repeat;
  width:100%;
  height:310px;
}
.col_wrapper{
  text-align:center;
}
.col{
  width:30%;
  display:inline-block;
  vertical-align:top;
  background:#fefefe;
}
.col ul{
  display:block;
}
.col, .col a{
  color:#888;
  font-family:sans-serif;
}
.actions{
  padding:10px 0;
}

footer{
  background:#d58;
  color:#fff;
  padding:10px;
  text-align:center;
}
