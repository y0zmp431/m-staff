@font-face {
	font-family: HennyPenny;
	src: local("HennyPenny"),
	url(/HennyPenny-Regular.ttf);
}
@font-face {
	font-family: DollhouseC;
	src: local("DollhouseC"),
	url(/pNGnrklh.ttf);
}
$max_width: 1280px;
html, body{
  width:100%;
  border-collapse:collapse;
}
*{
  margin:0;
  padding:0;
}
.clear{
  clear:both;
}
.container{
  max-width:$max_width;
  margin:0 auto;
}

.logo{
	float:left;
	width:270px;
}
hgroup.logo{
	color:#555;
}
hgroup.logo:hover{
	color:#d58;
}
.logo h1{
	font-family: 'HennyPenny', sans-serif;
	font-size:25px; 
	padding:0;
	margin:15px 0 0 0;
	text-align:center;
	line-height:100%;
}
.logo h2{
	font-family: 'DollhouseC', sans-serif;
	font-size: 12px;
	line-height:100%;
	padding:0 0 10px 0;
	margin:0;
	text-align:center;
}
header{
  border-bottom:1px solid #aaa;
}
nav.main{
  display:block;
  float:right;
}
nav.main a{
  display:inline-block;
  padding:16px 10px 15px 10px;
	font-family: 'DollhouseC', sans-serif;
	font-size: 20px;
  font-weight:bold;
  color:#888;
}
nav.main a:hover{
  background:#f09;
  color:#fff;
}
.main_banner{
  background:url("<%= asset_path "winter_race.jpg %>") no-repeat;
}
